pkgname=ihandcashier
pkgver=1.0.1
pkgrel=1
pkgdesc="Ihand Cashier (AppImage packaged for Arch)"
arch=('x86_64')
url="https://ihandcashier.basapadi.com"
license=('custom')
depends=('fuse2') # AppImage butuh FUSE
source=("IhandCashier-${pkgver}.AppImage")
sha256sums=('SKIP')

package() {

  install -Dm755 "IhandCashier-${pkgver}.AppImage" \
    "$pkgdir/usr/lib/${pkgname}/${pkgname}.AppImage"

  install -d "$pkgdir/usr/bin"
  ln -s "/usr/lib/${pkgname}/${pkgname}.AppImage" \
    "$pkgdir/usr/bin/${pkgname}"

  install -Dm644 /dev/stdin "$pkgdir/usr/share/applications/${pkgname}.desktop" <<EOF
[Desktop Entry]
Name=IhandCashier
Exec=${pkgname}
Icon=${pkgname}
Type=Application
Categories=Utility;
EOF
}
