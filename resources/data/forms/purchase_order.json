{
    "dialog": {
        "width": 7
    },
    "main": {
        "label": "Form Penerimaan",
        "column": 2,
        "forms": [
            {
                "name": "kode",
                "type": "text",
                "label": "Kode PO",
                "required": true,
                "disabled": ":kode_disabled",
                "hint": "Masukkan Kode PO atau autogenerate"
            },
            {
                "name": "contact_id",
                "type": "select",
                "label": "Pemasok",
                "required": false,
                "hint": "Pilih Pemasok barang",
                "options": ":contacts"
            },
            {
                "name": "tanggal",
                "type": "date",
                "label": "Tanggal PO",
                "required": true,
                "hint": "Masukkan Tanggal PO"
            },
            {
                "name": "tanggal_perkiraan_datang",
                "type": "date",
                "label": "Tanggal Perkiraan Datang",
                "required": false,
                "hint": "Masukkan Tanggal Perkiraan Barang Datang"
            },
            {
                "name": "approval_by",
                "type": "select",
                "label": "Persetujuan Dari",
                "required": true,
                "hint": "Pilih Pengguna",
                "options": ":users",
                "disabled": ":approval_by_disabled"
            },
            {
                "name": "catatan",
                "type": "textarea",
                "label": "Catatan",
                "required": false,
                "hint": "Pilih Catatan"
            }
        ]
    },
    "details": {
        "label": "Detail Pesanan Pembelian",
        "column": 5,
        "type": "addtable",
        "editable": true,
        "forms": [
            {
                "name": "item_id",
                "type": "select",
                "label": "Barang",
                "required": true,
                "hint": "Pilih Barang",
                "options": ":items"
            },
            {
                "name": "unit_id",
                "type": "select",
                "label": "Satuan",
                "required": true,
                "hint": "Pilih Satuan Barang",
                "options": ":units"
            },
            {
                "name": "jumlah",
                "type": "number",
                "label": "Jumlah",
                "required": true,
                "hint": "Masukkan Jumlah Barang"
            },
            {
                "name": "harga",
                "type": "currency",
                "label": "Harga Satuan",
                "required": true,
                "hint": "Masukkan Harga Satuan Barang"
            }
        ]
    }
}