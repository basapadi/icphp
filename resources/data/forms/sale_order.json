{
    "dialog": {
        "width": 7
    },
    "main": {
        "label": "Form Pemesanan Penjualan",
        "column": 3,
        "forms": [
            {
                "name": "kode",
                "type": "text",
                "label": "Kode SO",
                "required": true,
                "disabled": ":kode_disabled",
                "hint": "Masukkan Kode SO atau autogenerate"
            },
            {
                "name": "contact_id",
                "type": "select",
                "label": "Pelanggan",
                "required": false,
                "hint": "Pilih Pelanggan barang",
                "options": ":contacts"
            },
            {
                "name": "tanggal",
                "type": "date",
                "label": "Tanggal SO",
                "required": true,
                "hint": "Masukkan Tanggal SO"
            },
            {
                "name": "tanggal_permintaan",
                "type": "date",
                "label": "Tanggal Permintaan",
                "required": true,
                "hint": "Masukkan Tanggal Permintaan Barang"
            },
            {
                "name": "status",
                "type": "select",
                "label": "Status SO",
                "required": true,
                "hint": "Pilih Status SO",
                "options": ":so_status",
                "disabled": ":status_disabled"
            },
            {
                "name": "approval_by",
                "type": "select",
                "label": "Persetujuan Dari",
                "required": true,
                "hint": "Pilih Pengguna",
                "options": ":users"
            },
            {
                "name": "catatan",
                "type": "textarea",
                "label": "Catatan",
                "required": false,
                "hint": "Pilih Catatan"
            }
        ]
    },
    "details": {
        "label": "Detail Pesanan Penjualan",
        "column": 5,
        "type": "addtable",
        "editable": true,
        "forms": [
            {
                "name": "item_id",
                "type": "select",
                "label": "Barang",
                "required": true,
                "hint": "Pilih Barang",
                "options": ":items"
            },
            {
                "name": "unit_id",
                "type": "select",
                "label": "Satuan",
                "required": true,
                "hint": "Pilih Satuan Barang",
                "options": ":units"
            },
            {
                "name": "jumlah",
                "type": "number",
                "label": "Jumlah",
                "required": true,
                "hint": "Jumlah Barang"
            },
            {
                "name": "harga",
                "type": "currency",
                "label": "Harga Satuan",
                "required": true,
                "hint": "Harga Satuan Barang"
            },
            {
                "name": "discount",
                "type": "currency",
                "label": "Potongan",
                "required": false,
                "hint": "Potongan Harga dari Total Harga Barang"
            }
        ]
    }
}